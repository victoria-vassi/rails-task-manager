<div class="container">
  <div class="row">
    <div class="btn">
      <button type="button"  onclick="window.location.href = '/tasks';">
        <i class="fas fa-arrow-left"></i>
        Back
      </button>
    </div>
  </div>

<div class="card m-3">
  <div class="card-body">
    <h1> New tasks </h1>
    <%= form_for(@task) do |f| %>
    <div>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_field :details, class: 'form-control' %>
      </div>

      <%= f.submit value = "Create a task", class: 'btn-flat' %>
      <% end %>
    </div>
  </div>
</div>


