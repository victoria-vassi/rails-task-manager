<div class="container">
  <div class="row">


    <div class="col-sm">
      <h2>To-Do</h2>
      <ul>
        <% @tasks.each do |task| %>
        <li>
          <% if task.completed == true %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
          <%= task.title%>
          <button class="btn">
            <%= link_to '<i class="far fa-eye"></i>'.html_safe, task_path(task["id"]) %>
          </button>

           <button class="btn">
             <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
           </button>
        </li>
        <% end %>
      </ul>
      <div class="create-button">
        <%= link_to "+" , new_path %>
      </div>
    </div>

    <div class="col-sm">
      <h2>Completed</h2>
      <ul>
        <% @tasks.each do |task| %>
        <li>
          <% if task.completed == true %>
            <i class="far fa-check-square"></i>
            <%= task.title%>
          <button class="btn">
             <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
           </button>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>


  </div>
</div>

