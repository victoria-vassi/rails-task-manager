<h1> My tasks </h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed == true %>
      [x]
    <% else %>
      []
    <% end %>
    <%= link_to task.title , task_path(task["id"]) %>

     <button class="btn">
       <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
     </button>
  </li>
  <% end %>
</ul>

<div>
  <%= link_to "Create task" , new_path %>
</div>
