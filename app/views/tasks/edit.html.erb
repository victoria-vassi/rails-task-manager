<h1> New tasks </h1>
<%= form_for(@task) do |f| %>

 <div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div>
    <%= f.check_box('completed') %>
    <span>completed</span>
  </div>

  <%= f.submit value = "Update task", class: 'btn btn-primary' %>
  <% end %>
</div>

<div>
  <%= link_to "Back to list" , tasks_path %>
</div>
